
pipeline {
    agent { dockerfile {true} args '-u root:root'}
     //agent { node { label 'linux && node14' } args '-u root:root'}
    environment {
        CI = 'true' 
    }
        
    stages {
        stage('Version') {
            steps {
                sh 'node --version'
            }
        }
       
        stage('Example') {
            steps {
                sh 'npm config ls'
                sh 'npm run test_all'
            }
        }
       
    }
}
