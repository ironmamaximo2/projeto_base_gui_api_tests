pipeline {
    agent {
        dockerfile true {
            args '-u root:sudo -v $HOME/workspace/myproject:/myproject'
        }
    }
        
    stages {
        stage('Version') {
            steps {
                sh 'node --version'
            }
        }
        stage('Test') {
            steps {
                sh 'npm run test_all'
            }
        }
    }
}