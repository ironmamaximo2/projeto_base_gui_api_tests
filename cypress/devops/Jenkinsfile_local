def user_id
def group_id
node {
  user_id = sh(returnStdout: true, script: 'id -u').trim()
  group_id = sh(returnStdout: true, script: 'id -g').trim()
}

pipeline {
    agent { dockerfile true }
        
    stages {
        stage('Version') {
            steps {
                sh 'node --version'
            }
        }
        stage('Test') {
            steps {
                sh 'echo ${user_id}'
                sh 'echo ${group_id}'

            }
        }
    }
}