
pipeline {
    agent {
        docker {
            image 'cypress/base:12.16.1' 
            args '-p 3000:3000' 
        }
    }
    stages {
        stage('Install Dependencies') { 
            steps {
                sh 'npm i'
                
            }
        }
        
        stage('Test') { 
            steps {
                sh 'npm run test_all'
            }
        }
    }
}