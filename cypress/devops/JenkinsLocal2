pipeline {
  agent any

  tools { nodejs 'node' }

  stages {
    stage('Build') {
      steps {
          sh 'npm config ls'
        }
      }
    }
    stage('install') {
      steps {
        sh 'npm install'
      }
    }

    stage('cypress open') {
      steps {
        sh 'npx cypress open'
      }
    }

    stage('test') {
      steps {
        sh 'npm run test_all'
      }
    }
  }

