pipeline {
  agent {
    // this image provides everything needed to run Cypress
    docker {
      image 'cypress/base:10'
    }
  }

  stages {
   
    stage('install') {
      steps {
        sh 'npm install'
      }
    }

    stage('cypress open') {
      steps {
        sh 'npx cypress open'
      }
    }

    stage('test') {
      steps {
        sh 'npm run test_all'
      }
    }
  }
}

