pipeline {
    agent {
        dockerfile {
            image 'cypress/browsers:node12.18.3-chrome87-ff82' 
            args '-p 3000:3000' 
        }
    }
    stages {
        stage('Install Dependencies') { 
            steps {
                sh 'node -v'
              
            }
        }
       
        stage('Test') { 
            steps {
                 sh 'npm run test_gui_all'
            }
        }
    }
}