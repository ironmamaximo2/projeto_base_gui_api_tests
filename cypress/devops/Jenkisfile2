pipeline {
    agent {
        docker {
            image 'cypress/base:12.16.1' 
            args '-p 3000:3000' 
        }
    }
    stages {
        stage('Install Dependencies') { 
            steps {
                sh 'npm ci'
              
            }
        }
       
        stage('Test') { 
            steps {
                 sh 'npm run test_gui_all'
            }
        }
    }
}